<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_uk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="de.bbs_donnersbergkreis.www.schoolapp.UK.UK"
    android:background="@drawable/uk_flag">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView_Main_Menu_EN"
        android:textSize="30dp"
        android:textColor="@color/colorOrange"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_Location_EN"
        android:text="Location"
        android:textColor="@color/colorAccent"
        android:onClick="button_Location"
        android:layout_below="@+id/TextView_School_EN"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School Info"
        android:textColor="@color/colorAccent"
        android:onClick="button_History_of_School"
        android:id="@+id/button_School_info_EN"
        android:layout_below="@+id/button_Location_EN"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_Gallery_EN"
        android:text="Gallery"
        android:textColor="@color/colorAccent"
        android:onClick="button_Pictures"
        android:layout_below="@+id/button_School_info_EN"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_Teachers_EN"
        android:text="Teachers"
        android:textColor="@color/colorAccent"
        android:onClick="button_List_of_graduates"
        android:layout_below="@+id/button_Gallery_EN"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_Disscussion_Blog_EN"
        android:text="Disscussion Blog"
        android:textColor="@color/colorAccent"
        android:onClick="button_Disscussion_Blog"
        android:layout_below="@+id/button_Teachers_EN"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_Mini_Games_EN"
        android:text="Mini Games"
        android:textColor="@color/colorAccent"
        android:onClick="button_School_meal"
        android:clickable="false"
        android:layout_below="@+id/button_Disscussion_Blog_EN"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--  watch out and set the button on true if u have added the mini games-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView_School_EN"
        android:text="Name of the school"
        android:textSize="25dp"
        android:layout_below="@+id/textView_Main_Menu_EN"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorOrange"/>


</RelativeLayout>
